<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Horizon.MainPage">

    <ContentPage.Content>
        <AbsoluteLayout>

            <Button 
                Pressed="OptionsPressed"
                x:Name="optionsBtn"
                ImageSource="options.png"
                BorderColor="Transparent"
                BackgroundColor="Transparent"
                AbsoluteLayout.LayoutBounds="0.95,0.05,0.1,0.05"
                AbsoluteLayout.LayoutFlags="All"
            ></Button>
            <Button  
                Pressed="Button_Pressed_2D"
                x:Name="btn2D"
                ImageSource="btn2D.png"
                BorderColor="Transparent"
                BackgroundColor="Transparent"
                AbsoluteLayout.LayoutBounds="0.5,0.20,0.6,0.3"
                AbsoluteLayout.LayoutFlags="All"
            ></Button>
            <Button 
                Pressed="Button_Pressed_3D"
                x:Name="btn3D"
                ImageSource="btn3D.png"
                BorderColor="Transparent"
                BackgroundColor="Transparent"
                AbsoluteLayout.LayoutBounds="0.5,0.80,0.6,0.3"
                AbsoluteLayout.LayoutFlags="All"
            ></Button>
            

        </AbsoluteLayout>
    </ContentPage.Content>
    
</ContentPage>
